<style>
  .pdf-embed {
    display: block;
  }
  .pdf-link {
    display: none;
  }

  /* For screens narrower than 768px (typical tablet/phone) */
  @media (max-width: 768px) {
    .pdf-embed {
      display: none;   /* Hide the embed */
    }
    .pdf-link {
      display: block; /* Show a direct link instead */
    }
  }
</style>

<div class="pdf-embed">
  <object 
    data="{{ '/assets/pdf/cv.pdf' | relative_url }}"
    type="application/pdf"
    width="100%" 
    style="height: 80vh;"
  >
    <p>
      Unable to display the PDF. 
      <a href="{{ '/assets/pdf/cv.pdf' | relative_url }}">Download here</a>.
    </p>
  </object>
</div>

<div class="pdf-link">
  <p>
    To view my CV, 
    <a href="{{ '/assets/pdf/cv.pdf' | relative_url }}" target="_blank">open this PDF</a>
  </p>
</div>
